{
  "name": "my-leaderboard",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://josephroque.dev/myLeaderboard/site",
  "dependencies": {
    "@shopify/polaris": "^3.18.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "octokat": "^0.10.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "tslint": "^5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.5.2"
  },
  "scripts": {
    "start": "yarn copy-common && react-scripts start",
    "pre-build": "rm -rf ../site",
    "build": "yarn copy-common && yarn pre-build && react-scripts build && yarn post-build",
    "post-build": "mv ./build ../site",
    "test": "yarn copy-common && react-scripts test",
    "eject": "react-scripts eject",
    "lint": "tslint 'src/**/*.ts?(x)'",
    "copy-common": "rm -rf ./src/lib && cp -r ../common ./src/lib"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
