{
  "name": "my-leaderboard",
  "version": "5.0.4",
  "private": true,
  "homepage": "https://josephroque.dev/myLeaderboard/site",
  "dependencies": {
    "@shopify/polaris": "^4.10.2",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.6",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "octokat": "^0.10.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.0",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "start": "yarn copy-common && react-scripts start",
    "pre-build": "rm -rf ../site",
    "build": "yarn copy-common && yarn pre-build && react-scripts build && yarn post-build",
    "post-build": "mv ./build ../site",
    "test": "yarn copy-common && react-scripts test",
    "eject": "react-scripts eject",
    "lint": "tslint 'src/**/*.ts?(x)'",
    "copy-common": "rm -rf ./src/lib && cp -r ../common ./src/lib"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
